@model WebAppBD.Models.ArchiPeliPorTitulo

@{
    ViewData["Title"] = "Delete";
}

    <h1>Eliminar Película Por Título</h1>

    <h3>¿Está seguro de eliminar este registro?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Duración:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion)
        </dd>
        <dt class="col-sm-2">
            Número Cinta:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCintas)
        </dd>
        <dt class="col-sm-2">
            Género:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            Actor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actores)
        </dd>
        <dt class="col-sm-2">
            Director:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Directores)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPeliPorTitulo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-success" asp-action="Index">Atrás</a>
    </form>
</div>

@model WebAppBD.Models.ArchiPeliPorTitulo

@{
    ViewData["Title"] = "Delete";
}

    <h1>Eliminar Pelicula Por Titulo</h1>

<h3>Desea eliminar el registro?</h3>
<div>
    <h4>ArchiPeliPorTitulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titulo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Duracion:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion)
        </dd>
        <dt class="col-sm-2">
            Numero Cintas:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCintas)
        </dd>
        <dt class="col-sm-2">
            Genero:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            Actor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actores)
        </dd>
        <dt class="col-sm-2">
            Director:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Directores)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPeliPorTitulo" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <<a class="btn btn-success" asp-action="Index">Atrás</a>
    </form>
</div>

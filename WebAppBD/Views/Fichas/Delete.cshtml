@model WebAppBD.Models.Ficha

@{
    ViewData["Title"] = "Delete";
}

    <h1>Eliminar Ficha</h1>

    <h3>¿Está seguro de eliminar este registro?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Número de Cinta:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCinta)
        </dd>
        <dt class = "col-sm-2">
            Película:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pelicula)
        </dd>
        <dt class = "col-sm-2">
           Nombre Socio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoSocioNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            Id de Ficha:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFichaSocioNavigation.IdFichaSocio)
        </dd class>
        <dt class = "col-sm-2">
           Id de Películas Devueltas:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPeliDevueltaNavigation.IdPeliDevuelta)
        </dd class>
        <dt class = "col-sm-2">
           Id de Película por Título:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPeliPorTituloNavigation.IdPeliPorTitulo)
        </dd class>
        <dt class = "col-sm-2">
            Id de Película Prestada:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPeliPrestadaNavigation.IdPeliPrestada)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdFicha" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-success" asp-action="Index">Atrás</a>
    </form>
</div>

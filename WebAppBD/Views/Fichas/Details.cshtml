@model WebAppBD.Models.Ficha

@{
    ViewData["Title"] = "Details";
}

    <h1>Detalles de Ficha</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Número de cinta:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCinta)
        </dd>
        <dt class = "col-sm-2">
            Película:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pelicula)
        </dd>
        <dt class = "col-sm-2">
            Código de Socio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoSocioNavigation.Apellido_1)
        </dd>
        <dt class = "col-sm-2">
            Id de Ficha Socio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFichaSocioNavigation.ActoresFavorito)
        </dd>
        <dt class = "col-sm-2">
            Id de Películas Devueltas:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPeliDevueltaNavigation.Actores)
        </dd>
        <dt class = "col-sm-2">
            Id de Película por Título:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPeliPorTituloNavigation.Actores)
        </dd>
        <dt class = "col-sm-2">
            Id de Película Prestada:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPeliPrestadaNavigation.Actores)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdFicha">Guardar</a> |
    <a class="btn btn-success" asp-action="Index">Atrás</a>
</div>

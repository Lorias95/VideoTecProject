@model WebAppBD.Models.Roles

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de Rol</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripcion:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdRol">Editar</a> |
    <a class="btn btn-success" asp-action="Index">Atrás</a>
</div>

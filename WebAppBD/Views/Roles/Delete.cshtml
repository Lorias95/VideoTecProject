@model WebAppBD.Models.Roles

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar registro de Roles</h1>

<h3>Desea eliminar el registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripcion:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRol" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-success" asp-action="Index">Atrás</a>
    </form>
</div>

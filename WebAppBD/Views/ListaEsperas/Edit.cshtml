@model WebAppBD.Models.ListaEspera

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Lista de Espera</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdListaEspera" />
            <div class="form-group">
                <label asp-for="CantidadSocios" class="control-label">Cantidad Socios</label>
                <input asp-for="CantidadSocios" class="form-control" />
                <span asp-validation-for="CantidadSocios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoEspera" class="control-label">Tiempo de Espera</label>
                <input asp-for="TiempoEspera" class="form-control" />
                <span asp-validation-for="TiempoEspera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFicha" class="control-label">Id Ficha</label>
                <select asp-for="IdFicha" class="form-control" asp-items="ViewBag.IdFicha"></select>
                <span asp-validation-for="IdFicha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Atrás</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

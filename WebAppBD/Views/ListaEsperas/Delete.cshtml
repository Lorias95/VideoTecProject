@model WebAppBD.Models.ListaEspera

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Registro de Lista en Espera</h1>

<h3>¿Está seguro de eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cantidad Socios:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadSocios)
        </dd>
        <dt class="col-sm-2">
            Tiempo Espera:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TiempoEspera)
        </dd>
        <dt class="col-sm-2">
            Id Ficha:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFichaNavigation.Pelicula)

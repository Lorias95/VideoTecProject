@model WebAppBD.Models.ArchiPeliDevueltas

@{
    ViewData["Title"] = "Details";
}

    <h1>Detalle de Películas Devueltas</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha Devolución:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaDevolucion)
        </dd>
        <dt class="col-sm-2">
            Título:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Duración:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion)
        </dd>
        <dt class="col-sm-2">
            Número Cintas:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCintas)
        </dd>
        <dt class="col-sm-2">
            Género:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            Actor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actores)
        </dd>
        <dt class="col-sm-2">
            Director:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Directores)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdPeliDevuelta">Editar</a> |
    <a class="btn btn-success" asp-action="Index">Atrás</a>
</div>
